        <activity android:label="@string/title_activity_settings" android:name="com.tcsdev.schoolyardmatching.activities.SettingsActivity" android:screenOrientation="sensorLandscape"/>
        <service android:enabled="true" android:name="com.tcsdev.schoolyardmatching.services.BackgroundMusicService"/>
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>
    </application>
    <uses-permission android:name="com.android.vending.BILLING"/>
